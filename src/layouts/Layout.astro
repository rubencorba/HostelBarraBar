	@import "tailwindcss";

	@keyframes bounce-pulse {
		0% {
			transform: translateY(0) scale(0.8);
			opacity: 0.8;
		}
		50% {
			transform: translateY(-7px) scale(1);
			opacity: 1;
		}
		100% {
			transform: translateY(0) scale(0.8);
			opacity: 0.8;
		}
	}

	.animate-bounce-pulse {
		animation: bounce-pulse 2s ease-in-out infinite;
	}

